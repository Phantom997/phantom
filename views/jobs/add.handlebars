<div class="row justify-content-center">
  <form class="form-horizontal  col col-lg-8" method="POST" action="/add/job">
    <div class="form-group">
      <label class="control-label col-sm-2" for="name">Name:</label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="name" name="name" placeholder="Enter name">
      </div>
    </div>
    <div class="form-group">
      <label class="control-label col-sm-2" for="desc">Description:</label>
      <div class="col-sm-10">
        <textarea class="form-control" rows="7" id="desc" name="desc" placeholder="Enter desc"></textarea>
      </div>
    </div>
    <input type="hidden" class="form-control hidden" id="userId" name="userId" value="{{returnId user}}">
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button type="submit" class="btn btn-default">Submit</button>
        <a class="btn btn-primary" href="/jobs" role="button">Jobs</a>

      </div>
    </div>
  </form>
</div>