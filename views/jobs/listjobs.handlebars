<h1 class="text-center">Posted Jobs</h1>

{{#ifeq (returnType user) "entr"}} 
<div> 
    <a class="btn btn-info btn-lg" href="/add/job" role="button">Add new job</a>
</div>

{{/ifeq}}
<br>

{{#each jobs}}
<div class="list-group">
  <a href="/view/job/{{this.id}}" class="list-group-item list-group-item-action flex-column align-items-start active">
    <div class="d-flex w-100 justify-content-between">
      <h5 class="mb-1">{{this.name}}</h5>
    </div>
    <p class="mb-1">{{this.desc}}</p>
  </a>
</div>
{{/each}}
